<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/drawable_splash_512px"
        android:layout_gravity="center"
        android:id="@+id/splashimg"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:id="@+id/splashtext"
        android:layout_gravity="center"
        android:layout_below="@+id/splashimg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show the actual weather"
        android:id="@+id/splashtext2"
        android:layout_gravity="center"
        android:layout_below="@+id/splashtext"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="on the screen"
        android:id="@+id/splashtext3"
        android:layout_below="@+id/splashtext2"
        android:layout_alignRight="@+id/splashtext"
        android:layout_alignEnd="@+id/splashtext" />

</RelativeLayout>